{
  "name": "x-borg",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:server && npm run build:ui",
    "build:server": "ts-node-esm server/build.ts && tsc-alias -p server/tsconfig.json",
    "build:ui": "next build ui",
    "lint": "npm run lint:server && npm run lint:ui",
    "lint:server": "npx eslint --ext .ts server/src",
    "lint:ui": "next lint ui",
    "dev:ui": "next dev ui",
    "postinstall": "prisma generate",
    "start": "npm run start:server && npm run start:ui",
    "start:server": "node --experimental-specifier-resolution=node server/.express/server/src",
    "start:ui": "next start ui",
    "test": "npm run test:server && npm run test:ui",
    "test:server": "jest --config server/jest.config.ts",
    "test:ui": "jest --config ui/jest.config.ts",
    "clean": "rm -rf server/.express ui/.next"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "prisma": {
    "schema": "./ui/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "@ts-rest/core": "^3.19.0",
    "@ts-rest/express": "^3.19.2",
    "@ts-rest/react-query": "^3.19.0",
    "cookie-parser": "^1.4.6",
    "encoding": "^0.1.13",
    "helmet": "^6.1.5",
    "morgan": "^1.10.0",
    "next": "^13.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "1.12.2",
    "web3": "^1.9.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@metamask/providers": "^10.2.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/eslint": "^8.21.3",
    "@types/express": "^4.17.17",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.0",
    "@types/jsonfile": "^6.1.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.2.4",
    "eslint-plugin-node": "^11.1.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.6",
    "prettier-plugin-tailwindcss": "^0.2.6",
    "prisma": "^4.13.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.5",
    "typescript": "^5.0.4"
  }
}
